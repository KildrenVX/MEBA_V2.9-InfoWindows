<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m.meba_v2.View.Detalle_punto_de_interes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NamePI" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="301dp"
            android:layout_height="222dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:text="@string/ParrafoPI" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/veranec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/veranecdotas"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                tools:ignore="ButtonStyle"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/agregaranec"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
