<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m.meba_v2.View.Ver_PuntoDeInteres">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NamePI" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="301dp"
            android:layout_height="222dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/ParrafoPI" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="178dp">


            <ImageButton
                android:id="@+id/AgrerAnec"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                app:srcCompat="@drawable/agregar" />

            <ImageButton
                android:id="@+id/VerAnec"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="49dp"
                app:srcCompat="@drawable/globo" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
