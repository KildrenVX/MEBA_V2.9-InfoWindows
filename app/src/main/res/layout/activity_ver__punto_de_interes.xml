<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m.meba_v2.View.Ver_PuntoDeInteres">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitlePI"
            style="@style/Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NamePI"
            android:textSize="36sp"
            tools:text="Titulo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="252dp"
            android:layout_height="192dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/DescrpPI"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/ParrafoPI"
            tools:text="Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  Texto  " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="178dp">


            <ImageButton
                android:id="@+id/AgrerAnec"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:onClick="addAnec"
                app:srcCompat="@drawable/add_anecdota" />

            <ImageButton
                android:id="@+id/VerAnec"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginStart="14dp"
                android:onClick="veranecdota"
                app:srcCompat="@drawable/ver_anecdota" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/VerAnec"
                android:layout_marginEnd="23dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Ver Anecdotas" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignStart="@+id/AgrerAnec"
                android:text="agregar "
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/AgrerAnec" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:text="anecdota"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
